<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<action-mappings>

		<action path="/goToCatalogue" scope="request" input=""
			parameter="" type="presentation.panier.action.forward.GoToCatalogueAction">
			<forward name="success" path="catalogue" redirect="false" />
		</action>
		<action path="/goToAccesInterdit" scope="request" input=""
			parameter=""
			type="presentation.panier.action.forward.GoToAccesInterditAction">
			<forward name="success" path="accesInterdit" redirect="false" />
		</action>
		<action path="/goToAjouterProduit" scope="request" input=""
			parameter=""
			type="presentation.panier.action.forward.GoToAjouterProduitAction">
			<forward name="success" path="ajouterProduit" redirect="false" />
		</action>
		<action path="/goToConnexion" scope="request" input=""
			parameter="" type="presentation.panier.action.forward.GoToConnexionAction">
			<forward name="success" path="connexion" redirect="false" />
		</action>
		<action path="/goToDetailCommande" scope="request" input=""
			parameter=""
			type="presentation.panier.action.forward.GoToDetailCommandeAction">
			<forward name="success" path="detailCommande" redirect="false" />
		</action>
		<action path="/goToDetailProduit" scope="request" input=""
			parameter=""
			type="presentation.panier.action.forward.GoToDetailProduitAction">
			<forward name="success" path="detailProduit" redirect="false" />
		</action>
		<action path="/goToDetailProduit" scope="request" input=""
			parameter=""
			type="presentation.panier.action.forward.GoToGestionProduitsAction">
			<forward name="success" path="gestionProduits" redirect="false" />
		</action>
		<action path="/goToMesCommandes" scope="request" input=""
			parameter="" type="presentation.panier.action.forward.GoToMesCommandesAction">
			<forward name="success" path="mesCommandes" redirect="false" />
		</action>
		<action path="/goToModifierProduit" scope="request" input=""
			parameter=""
			type="presentation.panier.action.forward.GoToModifierProduitAction">
			<forward name="success" path="modifierProduit" redirect="false" />
		</action>
		<action path="/goToMonPanier" scope="request" input=""
			parameter="" type="presentation.panier.action.forward.GoToMonPanierAction">
			<forward name="success" path="monPanier" redirect="false" />
		</action>
		<action path="/goToSupprimerProduit" scope="request" input=""
			parameter=""
			type="presentation.panier.action.forward.GoToSupprimerProduitAction">
			<forward name="success" path="supprimerProduit" redirect="false" />
		</action>
	</action-mappings>

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
	</plug-in>

</struts-config>

